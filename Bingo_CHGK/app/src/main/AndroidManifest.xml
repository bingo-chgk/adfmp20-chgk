<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="ru.spbhse.bingochgk">

    <dist:module dist:instant="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LaunchActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activities.TopicQuestionActivity" />
        <activity
            android:name=".activities.CollectionQuestionActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.RandomQuestionActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.SavedQuestionActivity" />
        <activity
            android:name=".activities.AllTopicsActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.CreateCollectionActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.ArticleActivity" />
        <activity android:name=".activities.ReferenceActivity" />
        <activity android:name=".activities.CreateArticleActivity" />
        <activity android:name=".activities.SavedQuestionsChoiceActivity" />
        <activity
            android:name=".activities.QuestionActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.ConcreteCollectionActivity" />
        <activity
            android:name=".activities.CollectionsActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.TopicsChoiceActivity"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>