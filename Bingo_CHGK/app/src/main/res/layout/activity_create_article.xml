<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/new_topic_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ArticleName"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/new_topic_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/writeArticleName"
        android:inputType="text" />

    <Button
        android:id="@+id/create_topic_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/createArticle" />

    <CheckBox
        android:id="@+id/load_checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/uploadQuestions" />

    <ProgressBar
        android:id="@+id/uploadQuestionsProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>